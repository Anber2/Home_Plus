<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewRealEstate"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:layout_margin="2dp"
    android:background="@drawable/card_border_silver"
    android:elevation="4dp"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardCornerRadius="4dp"
    card_view:cardUseCompatPadding="true"
    card_view:contentPadding="7dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp">

        <ImageView
            android:id="@+id/imgViewConstnCorporate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@android:drawable/alert_light_frame" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="2dp"
            android:background="@color/dark_white_bg"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_gravity="right"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="right">
                <!-- <View
                     android:id="@+id/basic_view1"
                     android:layout_width="1dp"
                     android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"/>-->
                <TextView
                    android:id="@+id/individual_inner_name"
                    style="@style/autoscrollText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:text="@string/hint_txt_name"
                    android:textAllCaps="true"
                    android:textColor="@android:color/black"
                    android:textDirection="rtl"
                    android:textSize="12sp"
                    />

                <TextView
                    android:id="@+id/hj"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/individual_inner_name"
                    android:gravity="center_vertical"
                    android:text=" : "
                    android:textColor="@android:color/black"
                    android:textSize="12sp"
                    />

                <TextView
                    android:id="@+id/txtCorporateNameValue"
                    style="@style/autoscrollText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_toLeftOf="@+id/hj"
                    android:paddingTop="2dp"
                    android:gravity="center_vertical"
                    android:text="Corporate Test"
                    android:textColor="@android:color/black"
                    android:textDirection="rtl"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="2dp"
                android:gravity="center_vertical">
                <!-- <View
                     android:id="@+id/basic_view2"
                     android:layout_width="1dp"
                     android:layout_height="wrap_content"
                     android:layout_marginRight="2dp"/>-->
                <TextView
                    android:id="@+id/indiviaualinner_location"
                    style="@style/autoscrollText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:text="الموقع"
                    android:textAllCaps="true"
                    android:textColor="@android:color/black"
                    android:textDirection="rtl"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/hj1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/indiviaualinner_location"
                    android:gravity="center_vertical"
                    android:text=" : "
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txtCorporateLocationValue"
                    style="@style/autoscrollText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/hj1"
                    android:gravity="center_vertical"
                    android:text=""
                    android:paddingTop="2dp"

                    android:textColor="@android:color/black"
                    android:textDirection="rtl"
                    android:textSize="12sp" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginRight="10dp"

                android:gravity="right">

                <!--    <View
                        android:id="@+id/basic_view"
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="42dp"/>-->
                <TextView
                    android:id="@+id/individualtct_rating_head"
                    style="@style/autoscrollText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"

                    android:gravity="center_vertical"
                    android:text="@string/txt_rating"
                    android:textAllCaps="true"
                    android:textColor="@android:color/black"
                    android:textDirection="rtl"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txtdotone"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/individualtct_rating_head"
                    android:gravity="center_vertical"
                    android:text=" : "
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />

                <RatingBar
                    android:id="@+id/ratingBarCorporateConstn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="6dp"
                    android:layout_toLeftOf="@+id/txtdotone"
                    android:textDirection="rtl"
                    android:background="@null"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:progressDrawable="@drawable/custom_rating_bar"
                    android:stepSize="1" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/txtRateCount"
                    style="@style/autoscrollText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="54dp"
                    android:gravity="right"
                    android:textColor="@color/red_txt_color"

                    android:textDirection="rtl"
                    android:textSize="12sp" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
