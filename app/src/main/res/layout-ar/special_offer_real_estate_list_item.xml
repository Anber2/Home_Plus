<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:id="@+id/layoutbottom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/ll_date"
                android:layout_marginBottom="1dp"
                android:background="@android:color/black"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/linearllout_spoffer_inner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"

                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/spoffertwo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_weight="1"
                            style="@style/autoscrollText"
                            android:layout_marginLeft="10dp"
                            android:textColor="@android:color/white"
                            android:textDirection="rtl" />
                        <TextView
                            android:id="@+id/spofferone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_weight="1"
                            style="@style/autoscrollText"
                            android:layout_marginLeft="10dp"
                            android:textColor="@android:color/white"
                            android:textDirection="rtl" />




                    </LinearLayout>




                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linerlout_sub_spofferinner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/spofferfour"
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:gravity="center"
                        style="@style/autoscrollText"
                        android:textColor="@android:color/white"
                        android:textDirection="rtl"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>


            <TextView
                android:id="@+id/txtOfferDescription"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_gravity="top"
                android:layout_marginBottom="15dp"
                android:gravity="right"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@android:color/black"
                android:textDirection="rtl"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imgViewSpecialOfferRealEstate"
                android:layout_width="match_parent"
                android:layout_height="191dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="1dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="top|right"
                android:adjustViewBounds="true"
                android:layout_marginRight="2dp"
                android:layout_marginTop="2dp"
                android:scaleType="fitXY"
                android:src="@drawable/offers_png" />

            <LinearLayout
                android:id="@+id/ll_date"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_below="@id/imgViewSpecialOfferRealEstate"

                android:layout_gravity="bottom">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".40"
                    android:background="@color/transperant_black"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txtDate"
                        style="@style/autoscrollText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textAllCaps="true"
                        android:textColor="@color/txt_yellow_color"
                        android:textDirection="rtl"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".60"
                    android:background="@color/btn_yellow_bg_transperant"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtTitle"
                        style="@style/autoscrollText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"

                        android:textAllCaps="true"
                        android:textColor="@android:color/black"
                        android:textDirection="rtl"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>


            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
