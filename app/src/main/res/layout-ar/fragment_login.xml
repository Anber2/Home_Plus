<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center|clip_horizontal"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/home_small_logo"/>
            <EditText
                android:id="@+id/etUserName"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:paddingRight="100dp"
                android:hint="@string/hint_txt_email"
                android:singleLine="true"
                android:inputType="text"

                android:textCursorDrawable="@drawable/cursor"
                android:background="@drawable/username_ar"
                android:gravity="right|center_vertical"
                android:textDirection="rtl"/>
            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="15dp"
                android:paddingRight="100dp"
                android:textCursorDrawable="@drawable/cursor"
                android:hint="@string/hint_txt_pswd"
                android:inputType="textPassword"
                android:singleLine="true"
                android:background="@drawable/password_ar"
                android:gravity="right|center_vertical"
                android:textDirection="rtl"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="15dp">
                <CheckBox
                    android:id="@+id/checkBoxKeepLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/login_check_box_bg"
                    android:layout_alignParentRight="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toLeftOf="@+id/checkBoxKeepLogin"
                    android:layout_alignBaseline="@+id/checkBoxKeepLogin"
                    android:text="@string/txt_remember_me"
                    android:textAppearance="@style/TextAppearance.FontPath.neosansararabic"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/txt_grey_color"
                    android:textSize="15sp"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/txtForgetPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="@string/txt_forgot_pswd"
                android:textColor="@color/txt_grey_color"
                android:textSize="15sp"/>
            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/selector_addtocart_btn"
                android:text="@string/btn_txt_login"
                android:textAllCaps="true"
                android:textColor="@drawable/selector_addtocart_txt"/>
            <Button
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/selector_addtocart_btn"
                android:text="@string/btn_txt_register_in_login"
                android:textAllCaps="true"
                android:textColor="@drawable/selector_addtocart_txt"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
