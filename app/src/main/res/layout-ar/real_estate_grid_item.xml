<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardViewRealEstate"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="4dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="5dp"
   >
    <FrameLayout
        android:id="@+id/frameLayCard"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@drawable/card_border">
        <ImageView
            android:id="@+id/imgViewRealEstateItem"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:padding="2dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:src="@android:drawable/alert_light_frame"/>
        <LinearLayout
            android:layout_width="25dp"
            android:layout_height="165dp"
            android:layout_marginTop="-58dp"
            android:layout_marginRight="15dp"
            android:layout_gravity="top|right"
            android:rotation="-55"
            android:gravity="center"
            android:background="@color/btn_yellow_bg">
            <TextView
                android:id="@+id/txtPropertyPurpose"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-2dp"
                android:layout_marginRight="-2dp"
                android:singleLine="true"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textDirection="rtl"
                android:rotation="90"
                android:text="Text"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="95dp"
            android:layout_height="40dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:layout_gravity="left|bottom"
            android:gravity="center"
            android:background="@color/txt_color_realestate_dark_grey"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtPropertyLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/autoscrollText"
                android:gravity="center"
                android:text="Testing"
                android:paddingTop="2dp"
                android:textSize="12sp"
                android:textColor="@android:color/black"
                android:textDirection="rtl"/>
            <TextView
                android:id="@+id/txtPropertyPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                style="@style/autoscrollText"
                android:gravity="center"
                android:text="Testing"
                android:textSize="14sp"
                android:textStyle="bold"

                android:textColor="@android:color/black"
                android:textDirection="rtl"/>
        </LinearLayout>
    </FrameLayout>
</android.support.v7.widget.CardView>
