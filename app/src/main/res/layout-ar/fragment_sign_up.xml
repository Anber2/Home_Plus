<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:paddingBottom="30dp">

            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/username_ar"
                android:ellipsize="end"
                android:gravity="right|center_vertical"
                android:hint="@string/hint_txt_name"
                android:paddingRight="100dp"
                android:singleLine="true"
                android:textDirection="rtl" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/email_ar"
                android:ellipsize="end"
                android:inputType="textEmailAddress"
                android:gravity="right|center_vertical"
                android:hint="@string/hint_txt_email"
                android:paddingRight="100dp"
                android:singleLine="true"
                android:textDirection="rtl" />

            <EditText
                android:id="@+id/etPwd"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/password_ar"
                android:ellipsize="end"
                android:gravity="right|center_vertical"
                android:hint="@string/hint_txt_pswd"
                android:inputType="textPassword"
                android:paddingRight="100dp"
                android:singleLine="true"
                android:textDirection="rtl" />

            <EditText
                android:id="@+id/etConfirmPwd"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/password_ar"
                android:ellipsize="end"
                android:gravity="right|center_vertical"
                android:hint="@string/hint_txt_confirm_pwd"
                android:inputType="textPassword"
                android:paddingRight="100dp"
                android:singleLine="true"
                android:textDirection="rtl" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="15dp">

                <Spinner
                    android:id="@+id/etGender"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/gender_ar"
                    android:hint="@string/hint_txt_gender"
                    android:paddingRight="100dp"
                    android:textDirection="rtl" />

                <TextView
                    android:id="@+id/spinner_textview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="100dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="2dp"
                    android:hint="@string/hint_txt_gender"
                    android:textSize="18sp"
                    android:textColor="@android:color/black" />
            </RelativeLayout>

            <EditText
                android:id="@+id/etAge"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/agenew_ar"
                android:ellipsize="end"
                android:gravity="right|center_vertical"
                android:hint="@string/hint_txt_age"
                android:inputType="number"
                android:maxLength="3"
                android:paddingRight="100dp"
                android:singleLine="true"
                android:textDirection="rtl" />

            <EditText
                android:id="@+id/etMobile"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/mobile_ar"
                android:ellipsize="end"
                android:gravity="right|center_vertical"
                android:hint="@string/hint_txt_mobile"
                android:inputType="numberSigned"
                android:paddingRight="100dp"
                android:singleLine="true"
                android:textDirection="rtl" />

            <Button
                android:id="@+id/btnRegisterAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:background="@android:color/black"
                android:text="@string/btn_txt_register"
                android:textAllCaps="true"
                android:textColor="@color/btn_yellow_bg" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
