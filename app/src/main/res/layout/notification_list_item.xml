        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/imageViewproperty"
        android:text="@string/notification_region"
        android:textColor="@android:color/black"
        android:textSize="13sp"
        android:textAllCaps="true"
         />

    <TextView
        android:id="@+id/txtviewpurpose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewregion"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/imageViewproperty"
        android:lineSpacingExtra="10dp"
        android:text="@string/notification_purpose"
        android:textColor="@android:color/black"
        android:textSize="13sp"
        android:textAllCaps="true"
        />
    <TextView
        android:id="@+id/txtviewproptype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtviewpurpose"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/imageViewproperty"
        android:lineSpacingExtra="10dp"
        android:text="@string/notification_proptype"
