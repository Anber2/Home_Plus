<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/card_border"
        android:orientation="vertical"
        android:padding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/layoutbottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_date"

                android:background="@android:color/black"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/linearllout_spoffer_inner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:visibility="gone">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:orientation="horizontal">

                    <TextView
                        android:id="@+id/spofferone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        style="@style/autoscrollText"

                        android:textAppearance="@style/TextAppearance.FontPath.segoeuib"
                        android:textColor="@android:color/white" />

                        <TextView
                            android:id="@+id/spoffertwo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            style="@style/autoscrollText"
                            android:textAppearance="@style/TextAppearance.FontPath.segoeuib"
                            android:textColor="@android:color/white" />
                        </LinearLayout>



                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linerlout_sub_spofferinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:paddingRight="3dp"
                    android:paddingLeft="3dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/spofferfour"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        style="@style/autoscrollText"
                        android:textAppearance="@style/TextAppearance.FontPath.segoeuib"
                        android:textColor="@android:color/white"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/txtOfferDescription"
                android:layout_width="385dp"
                android:layout_height="20dp"
                android:layout_gravity="top"
                android:layout_marginBottom="15dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textAppearance="@style/TextAppearance.FontPath.segoeuib"
                android:textColor="@android:color/black"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imgViewSpecialOfferConstn"
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:scaleType="fitXY" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="top|left"

                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/ic_drawer_offer_tag"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/ll_date"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_below="@id/imgViewSpecialOfferConstn">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".60"
                    android:background="@color/btn_yellow_bg_transperant"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtOfferTitle"
                        style="@style/autoscrollText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textAppearance="@style/TextAppearance.FontPath.segoeuib"
                        android:textAllCaps="true"
                        android:textColor="@android:color/black"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".40"
                    android:background="@color/transperant_black"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txtDateInOfferConstn"
                        style="@style/autoscrollText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textAppearance="@style/TextAppearance.FontPath.segoeuib"
                        android:textAllCaps="true"
                        android:textColor="@color/txt_yellow_color"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
