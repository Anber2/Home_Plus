<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|clip_horizontal"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/home_small_logo" />

            <EditText
                android:id="@+id/etUserName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/username"
                android:hint="@string/hint_txt_user_name"
                android:paddingLeft="100dp"
                android:textCursorDrawable="@drawable/cursor"
                android:singleLine="true" />

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/password"
                android:hint="@string/hint_txt_pswd"
                android:inputType="textPassword"

                android:textCursorDrawable="@drawable/cursor"
                android:paddingLeft="100dp"
                android:singleLine="true" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center">

                <CheckBox
                    android:id="@+id/checkBoxKeepLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/login_check_box_bg" />

                <TextView
                    android:id="@+id/txtRememberme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/checkBoxKeepLogin"
                    android:layout_alignBottom="@+id/checkBoxKeepLogin"
                    android:layout_toEndOf="@+id/checkBoxKeepLogin"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/checkBoxKeepLogin"
                    android:text="@string/txt_remember_me"
                    android:textAppearance="@style/TextAppearance.FontPath.segoeuib"
                    android:textColor="@android:color/black"
                    android:textSize="15sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/txtForgetPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="@string/txt_forgot_pswd"
                android:textColor="@android:color/black"

                android:textSize="15sp" />

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/login_btn_bg"
                android:text="@string/btn_txt_login"
                android:textAllCaps="true"
                android:textColor="@drawable/login_btn_text_color" />

            <Button
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/login_btn_bg"
                android:text="@string/btn_txt_register_in_login"
                android:textAllCaps="true"
                android:textColor="@drawable/login_btn_text_color" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
