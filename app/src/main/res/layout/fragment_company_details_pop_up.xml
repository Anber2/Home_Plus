<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_fragment_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/linear_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            >

            <TextView
                android:id="@+id/dialog_prop_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical|center_horizontal"
                android:paddingTop="10dp"
                android:text="@string/txt_company_details"
                android:textColor="@android:color/black"

                android:textSize="15sp" />

            <Button
                android:id="@+id/btnCloseInDialog"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="end|right"
                android:background="@drawable/close_button"
                android:gravity="center_vertical|center_horizontal"
                android:text="X"
                android:textColor="#FFF"

                android:textSize="14sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_dialog"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/txtCompanyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/txt_compny_name"

                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txtCompanyNameValue"
                style="@style/autoscrollText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/txtCompanyName"
                android:layout_toRightOf="@+id/txtCompanyName"

                android:paddingLeft="10dp"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txtCompanyPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/txtCompanyName"
                android:layout_marginTop="10dp"
                android:text="@string/txt_company_phone_number"
                android:textColor="@android:color/black"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/txtCompanyPhoneValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/txtCompanyPhone"
                android:layout_below="@+id/txtCompanyName"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/txtCompanyPhone"
                android:textColor="@color/blue_linkify"
                android:maxLines="3"
                android:paddingLeft="10dp"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txtCompanyPhoneValueTwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_below="@+id/txtCompanyPhoneValue"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@id/txtCompanyPhone"
                android:paddingLeft="10dp"
                android:textColor="@color/blue_linkify"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txtCompanyEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/txtCompanyPhoneValueTwo"
                android:layout_marginTop="10dp"
                android:text="@string/txt_company_email"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txtCompanyEmailValue"
                style="@style/autoscrollText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/txtCompanyEmail"
                android:layout_below="@+id/txtCompanyPhone"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/txtCompanyEmail"
                android:paddingLeft="10dp"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txtCompanyWebsite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/txtCompanyEmail"
                android:layout_marginTop="10dp"
                android:text="@string/txt_company_website"

                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/txtCompanyWebsiteValue"
                style="@style/autoscrollText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/txtCompanyWebsite"
                android:layout_below="@+id/txtCompanyEmail"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/txtCompanyWebsite"
                android:autoLink="web"
                android:paddingLeft="10dp"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:visibility="visible" />

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
