<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewRealEstate"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:layout_margin="2dp"
    android:background="@drawable/card_border_silver"
    android:elevation="4dp"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardCornerRadius="4dp"
    card_view:cardUseCompatPadding="true"
    card_view:contentPadding="7dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp">

        <ImageView
            android:id="@+id/imgViewConstnCorporate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@android:drawable/alert_light_frame" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="2dp"
            android:background="@color/dark_white_bg"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"

                android:gravity="center_vertical">

                <View
                    android:id="@+id/basic_view1"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp" />

                <TextView
                    android:id="@+id/individual_inner_name"
                    style="@style/autoscrollText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/hint_txt_name"
                    android:textAllCaps="true"
                    android:textColor="@android:color/black"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/basic_view1"
                    android:gravity="center_vertical"
                    android:text=":"

                    android:textColor="@android:color/black"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtCorporateNameValue"
                    style="@style/autoscrollText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignLeft="@+id/basic_view1"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="Corporate Test"
                    android:textColor="@android:color/black"
                    android:textSize="10sp" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical">

                <View
                    android:id="@+id/basic_view2"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="67dp" />

                <TextView
                    android:id="@+id/indiviaualinner_location"
                    style="@style/autoscrollText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:text="@string/txt_nationality"
                    android:textAllCaps="true"
                    android:textColor="@android:color/black"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/basic_view2"
                    android:text=":"
                    android:textColor="@android:color/black"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtCorporateLocationValue"
                    style="@style/autoscrollText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignLeft="@+id/basic_view2"
                    android:layout_marginLeft="13dp"


                    android:text="Corporate Test"
                    android:textColor="@android:color/black"
                    android:textSize="10sp" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                >


                <View
                    android:id="@+id/basic_view"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="38dp" />

                <TextView
                    android:id="@+id/individualtct_rating_head"
                    style="@style/autoscrollText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/txt_rating"
                    android:gravity="center_vertical"
                    android:textAllCaps="true"
                    android:textColor="@android:color/black"
                    android:textSize="10sp"

                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtdotone"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignLeft="@+id/basic_view"
                    android:gravity="center_vertical"
                    android:text=":"
                    android:textColor="@android:color/black"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <RatingBar
                    android:id="@+id/ratingBarCorporateConstn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignLeft="@+id/basic_view"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="6dp"
                    android:background="@null"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:progressDrawable="@drawable/custom_rating_bar"
                    android:stepSize="1" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/txtRateCount"
                    style="@style/autoscrollText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:gravity="center|left"
                    android:textColor="@color/red_txt_color"

                    android:textSize="12sp" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
