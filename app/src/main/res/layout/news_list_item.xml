<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:paddingBottom="10dp">
    <FrameLayout
        android:id="@+id/frameLayNewsList"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:background="@drawable/card_border">
        <ImageView
            android:id="@+id/imgViewMediaNews"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:src="@android:drawable/alert_light_frame"
            android:scaleType="fitXY"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            android:background="@color/grey_bar"
            android:gravity="center">
            <TextView
                android:id="@+id/txtDateInNews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.FontPath.segoeuib"
                android:gravity="center"

                android:textColor="@android:color/white"
                style="@style/autoscrollText"/>
        </LinearLayout>
    </FrameLayout>
    <TextView
        android:id="@+id/txtTitleInNews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@+id/frameLayNewsList"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.FontPath.segoeuib"
        android:textColor="@android:color/black"
        style="@style/autoscrollText"/>
    <TextView
        android:id="@+id/txtDescriptionInNews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:maxLines="2"
        android:textAppearance="@style/TextAppearance.FontPath.segoeuib"
        android:textColor="@android:color/black"
        android:layout_below="@+id/txtTitleInNews"
        android:layout_toRightOf="@+id/frameLayNewsList"/>
    <ImageView
        android:id="@+id/imgViewRightArrow"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_toRightOf="@+id/frameLayNewsList"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/right_arrow_black_filled"/>
    <TextView
        android:id="@+id/txtNewsReadMore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_alignBaseline="@+id/imgViewRightArrow"
        android:layout_toRightOf="@+id/imgViewRightArrow"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="@string/txt_read_more"
        android:textAppearance="@style/TextAppearance.FontPath.segoeuib"
        android:textColor="@android:color/black"/>
    <View
        android:id="@+id/viewDividerInPhoto"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/frameLayNewsList"
        android:background="@android:color/black"/>
</RelativeLayout>
