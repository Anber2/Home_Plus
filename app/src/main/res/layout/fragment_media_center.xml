    <LinearLayout
        android:id="@+id/linearLayTopInMediaCenter"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:gravity="center_vertical"
        android:background="@color/btn_yellow_bg">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:weightSum="3"
            android:gravity="center_vertical"
            android:background="@drawable/curved_large_bg">
            <Button
                android:id="@+id/btnTabPhotoGallery"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/btn_txt_photo_gallery"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:textSize="12dp"
                android:textColor="@android:color/black"
                android:background="@drawable/button_curved_yellow"/>
            <Button
                android:id="@+id/btnTabNews"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="@string/btn_txt_photo_news"
                android:textSize="12dp"
                android:background="@drawable/button_curved_yellow"/>
            <Button
                android:id="@+id/btnTabVideoGallery"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:text="@string/btn_txt_video_gallery"
                android:textSize="12dp"
                android:background="@drawable/button_curved_yellow"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".03"
            android:background="@color/btn_yellow_bg"/>
        <TextView
            android:id="@+id/txtTitleOnMediaCenterphotoalbum"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".97"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:text="@string/btn_txt_photo_gallery"
            android:textSize="15sp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:visibility="gone"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/txtTitleOnMediaCenter"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".97"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:text="@string/txt_photo_gallery_list"
            android:textSize="15sp"
            android:textAllCaps="true"


            android:textColor="@android:color/black"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/LinearLayFilterGallery"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:paddingLeft="14dp"
        android:paddingRight="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".5"

            android:gravity="left|center_vertical"
            android:text="@string/txt_filter_based_on"
            android:textAllCaps="true"
            android:textSize="12sp"
            android:textAppearance="@style/TextAppearance.FontPath.segoeuib"
            android:textColor="@android:color/black"/>
        <Spinner
            android:id="@+id/spinnerMonth"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight=".5"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/drop_down_silver_border_shape"/>
        <Spinner
            android:id="@+id/spinnerYear"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight=".5"
            android:layout_marginRight="5dp"
            android:background="@drawable/drop_down_silver_border_shape"/>
    </LinearLayout>
    <TextView
        android:id="@+id/txtTitlrForGalleryInner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="hgsdgsdgdgg"
        android:layout_marginLeft="14dp"
        android:paddingLeft="14dp"
        android:textColor="@color/dark_yellow_txt_color"
        android:textSize="17sp"
        android:textAllCaps="true"
        android:visibility="gone"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycViewMediaCenter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/txtNoData"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/txt_no_data"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="gone"/>
</LinearLayout>
