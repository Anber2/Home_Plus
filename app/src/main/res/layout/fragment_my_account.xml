<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@android:color/white">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:paddingBottom="10dp"
            android:orientation="vertical">
            <Button
                android:id="@+id/btnEditProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:paddingLeft="-25dp"
                android:text="@string/btn_txt_edit_profile"
                android:textSize="15sp"
                android:textColor="@color/btn_yellow_bg"
                android:background="@drawable/ic_drawable_edit_profile"/>
            <Button
                android:id="@+id/btnRequestPropertyService"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:paddingLeft="55dp"
                android:text="@string/btn_txt_request_property_service"
                android:textSize="15sp"
                android:textColor="@color/btn_yellow_bg"
                android:background="@drawable/ic_drawable_request_service"/>
            <Button
                android:id="@+id/btnMyRequest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:paddingLeft="-25dp"
                android:text="@string/btn_txt_my_request"
                android:textSize="15sp"
                android:textColor="@color/btn_yellow_bg"
                android:background="@drawable/ic_drawable_my_request"/>
            <Button
                android:id="@+id/btnNotification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:paddingLeft="55dp"
                android:text="@string/btn_txt_notification"
                android:textSize="15sp"
                android:textColor="@color/btn_yellow_bg"
                android:background="@drawable/ic_drawable_notification"/>
            <Button
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:paddingLeft="-25dp"
                android:text="@string/btn_txt_logout"
                android:textSize="15sp"
                android:textColor="@color/btn_yellow_bg"
                android:background="@drawable/ic_drawable_logout"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
